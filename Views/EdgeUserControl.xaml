<UserControl
    x:Class="Grapher.Views.EdgeUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <Line X1="{x:Bind viewModel.SourceX, Mode=OneWay}"
              Y1="{x:Bind viewModel.SourceY, Mode=OneWay}"
              X2="{x:Bind viewModel.TargetX, Mode=OneWay}"
              Y2="{x:Bind viewModel.TargetY, Mode=OneWay}"
              StrokeThickness="2"
              Stroke="Black"/>
    
</UserControl>
